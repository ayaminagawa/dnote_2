.index-main.hidden-xs
  .index-main__top.clearfix
    .index-main__top__english
      %p Today's menu
    .index-main__top__japanese.col-sm-10
      %p.u-white-1.c-circle.c-large.u-pink-2 本
      %p.u-white-1.c-circle.c-large.u-yellow-2 日
      %p.u-white-1.c-circle.c-large.u-green-2 の
      %p.c-circle.c-large.u-beige-2 献
      %p.c-circle.c-large.u-beige-2 立
      %p.c-circle.c-large.u-beige-2 て
    .index-main__top__link.col-sm-2
      = link_to new_recipe_path do
        %i.fa.fa-caret-right
        一覧を見る
  .index-main__contents__cover.clearfix
    .index-main__contents.clearfix
      = render 'menus/menu', menu: @todays_menu

//モバイル

.mobile-index-main.visible-xs
  .index-main__top.clearfix
    .mobile-index-main__top.clearfix
      .index-main__top__english.col-xs-8
        %p Today's menu
      .mobile-index-main__top__link.col-xs-4
        = link_to menus_path do
          %i.fa.fa-caret-right
          一覧を見る  
    .mobile-index-main__top__japanese
      %p.u-white-1.c-circle.c-mobile.u-pink-2 本
      %p.u-white-1.c-circle.c-mobile.u-yellow-2 日
      %p.u-white-1.c-circle.c-mobile.u-green-2 の
      %p.c-circle.c-mobile.u-white-2 献
      %p.c-circle.c-mobile.u-white-2 立
  .index-main__contents
    .mobile-index-main__contents__image
      = link_to menu_path(@todays_menu) do
        .mobile-index-main__picture{style:"background-image: url(#{@todays_menu.image.url(:original)});"}
    .mobile-index-main__contents__name
      = link_to @todays_menu.name, menu_path(@todays_menu)
    .mobile-index-main__recipe
      %ul
        %li.index-main__recipe__li
          .index-main__recipe__select.c-circle.c-small.u-pink-2.u-white-1 主
          .index-main__recipe__name
            =link_to @main_recipe.name, recipe_path(@main_recipe)
        - @side_recipes.each do |recipe|
          %li.index-main__recipe__li
            .index-main__recipe__select.c-circle.c-small.u-yellow-2.u-white-1 副
            .index-main__recipe__name
              = link_to recipe.name, recipe_path(recipe)
          %p.mobile-index-main__recipe.u-lighter.u-dark-grey-1.u-pr10.u-pl10
            = @todays_menu.point


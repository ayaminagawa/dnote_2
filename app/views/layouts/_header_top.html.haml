%header#header-top
  .header-top-inner
    %ul#header-top__menu.hidden-xs
      %li#header-top__menu__logo.col-md-offset-2
        = link_to image_tag("logo.png" , class: "logo", alt: "dnote", height: "110px"), about_path
      %Li.header-top__menu__item.col-md-offset-3
        %p.c-circle.c-large.u-pink-2
          = link_to image_tag("pen_black.png", class: "header-top__menu__item__pencil"), new_recipe_path
        = link_to 'レシピをのせる', new_recipe_path
      %li.header-top__menu__item
        %p.c-circle.c-large.u-yellow-2
          = link_to image_tag("pen_green.png", class: "header-top__menu__item__pencil"), new_menu_path
        = link_to '献立をのせる', new_menu_path
      %li.header-top__menu__item
        %p.c-circle.c-large.u-green-2
          = link_to image_tag("key.png", class: "header-top__menu__item__key"), new_user_path
        = link_to 'ログイン', new_user_path

    //モバイル
    #sp-header-top__menu.visible-xs
      .sp-header-top__menu__logo.col-xs-5= link_to image_tag("dnote-sp-logo.png" , class: "logo", alt: "dnote", height: "40px"), about_path
      %p.sp-header-top__menu__logo.col-xs-5
        糖尿病のおいしい生活
      .sp-header-top__menu__sidebar.col-xs-2
        = button_tag '<i class="fa fa-bars"></i>'.html_safe, :class => "c-btn c-btn--sidebar"




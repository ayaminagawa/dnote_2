%li.col-sm-3.hidden-xs
  .fields
    .step-count
      = 1+f.index.to_i
    .imgInput
      .ingredient__image.imgView
      = f.file_field :image
    = f.text_area :body ,class: "edit-field",rows: "2" ,cols: "30", placeholder: "作り方を入力", style: "font-size: 1.25rem;height: 80px;"
    = link_to_remove_fields "削除", f
%li.visible-xs
  .fields.u-pb10
    .step-count
      = 1+f.index.to_i
    .imgInput
      .mobile-ingredient__image.imgView
      = f.file_field :image
    = f.text_area :body ,class: "edit-field",rows: "2" ,cols: "30", placeholder: "作り方を入力", style: "font-size: 1.25rem;height: 80px;width: 100%;"
    = link_to_remove_fields "削除", f



.recipe__index__item
  = link_to menu_path(menu) do
    .recipe__index__item-image.col-md-5{style: "background-image: url('#{menu.image.url(:original)}');"}
  .recipe__index__item-contents.col-md-7
    .item-contents__name
      = link_to menu.name, menu_path(menu)
    .item-contents__description
      = menu.point
    .item-contents__category-name
      .item-contents__category
      .item-contents__user
        .item-contents__user-image.c-circle{style: "background-image: url('#{menu.user.image.url(:original)}');"}
        .item-contents__user-name
          = link_to menu.user.name, user_path(menu.user)